<layouts>
    <layout id="Summary">
        <button x="center" y="0" width="fill" height="116" behavior="onRefreshButton">
            <state id="stateDefault" color="Graphics.COLOR_TRANSPARENT" />
            <state id="stateHighlighted" color="Graphics.COLOR_TRANSPARENT" />
            <state id="stateSelected" color="Graphics.COLOR_TRANSPARENT" />
            <state id="stateDisabled" color="Graphics.COLOR_BLACK" />
        </button>
        <!-- <bitmap id="DefaultSpotifyLogo" x="center" y="10" filename="../images/spotify.png" /> -->
        <label id="context" text="@Strings.ContextLabel" x="center" y="10" font="Gfx.FONT_SMALL" justification="Gfx.TEXT_JUSTIFY_CENTER" color="0xaeaeae" />
        <label id="track" text="@Strings.TrackLabel" x="center" y="47" font="Gfx.FONT_SMALL" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_WHITE" />
        <label id="artist" x="center" y="84" font="Gfx.FONT_SMALL" justification="Gfx.TEXT_JUSTIFY_CENTER" color="0x41ee7e" />
        <button x="20" y="130" width="111" height="111" behavior="onPlayButton" class="SpotifyPlayerButton" id="playButton">
            <state id="stateDefault" bitmap="@Drawables.PlayDefaultButton" />
            <state id="stateHighlighted" bitmap="@Drawables.PlayHighlightedButton" />
            <state id="stateSelected" bitmap="@Drawables.PlayHighlightedButton" />
            <state id="stateDisabled" bitmap="@Drawables.PlayDisabledButton" />
        </button>
        <button x="20" y="130" width="111" height="111" behavior="onPauseButton" class="SpotifyPlayerButton" id="pauseButton">
            <state id="stateDefault" bitmap="@Drawables.PauseDefaultButton" />
            <state id="stateHighlighted" bitmap="@Drawables.PauseHighlightedButton" />
            <state id="stateSelected" bitmap="@Drawables.PauseHighlightedButton" />
            <state id="stateDisabled" bitmap="@Drawables.PauseDisabledButton" />
        </button>
        <button x="151" y="130" width="111" height="111" behavior="onAddButton" class="SpotifyPlayerButton" id="addButton">
            <state id="stateDefault" bitmap="@Drawables.AddDefaultButton" />
            <state id="stateHighlighted" bitmap="@Drawables.AddHighlightedButton" />
            <state id="stateSelected" bitmap="@Drawables.AddHighlightedButton" />
            <state id="stateDisabled" bitmap="@Drawables.AddDisbaledButton" />
        </button>
        <button x="20" y="261" width="111" height="111" behavior="onPreviousButton" class="SpotifyPlayerButton" id="previousButton">
            <state id="stateDefault" bitmap="@Drawables.PreviousDefaultButton" />
            <state id="stateHighlighted" bitmap="@Drawables.PreviousHighlightedButton" />
            <state id="stateSelected" bitmap="@Drawables.PreviousHighlightedButton" />
            <state id="stateDisabled" bitmap="@Drawables.PreviousDisabledButton" />
        </button>
        <button x="151" y="261" width="111" height="111" behavior="onNextButton" class="SpotifyPlayerButton" id="nextButton">
            <state id="stateDefault" bitmap="@Drawables.NextDefaultButton" />
            <state id="stateHighlighted" bitmap="@Drawables.NextHighlightedButton" />
            <state id="stateSelected" bitmap="@Drawables.NextHighlightedButton" />
            <state id="stateDisabled" bitmap="@Drawables.NextDisabledButton" />
        </button>
        <label id="status" x="20" y="385" font="Gfx.FONT_XTINY" justification="Gfx.TEXT_JUSTIFY_LEFT" color="Gfx.COLOR_WHITE" />
        <label id="responseCode" x="260" y="385" font="Gfx.FONT_XTINY" justification="Gfx.TEXT_JUSTIFY_RIGHT" color="Gfx.COLOR_WHITE" />
        <drawable id="progressBackground" visible="false" />
        <text-area id="progressLabel" x="0" y="bottom" height="8%" width="100%" font="Gfx.FONT_TINY" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_WHITE" visible="false" />
        <!-- <drawable-list>
            <shape id="progress-bg" type="rectangle" x="left" y="bottom" height="10%" width="100%" color="0x1DB954" />
            <text-area id="progress" x="center" y="bottom" height="20%" width="100%" font="Gfx.FONT_TINY" justification="Gfx.TEXT_JUSTIFY_LEFT" color="Gfx.COLOR_BLACK" text="Fetching Playlists: 10/50" />
        </drawable-list> -->
    </layout>


    <layout id="ErrorLayout">
        <label id="Message" x="center" y="center" justification="Gfx.TEXT_JUSTIFY_CENTER" color="FFFFFF"/>
    </layout>

    <layout id="LoginLayout">
        <bitmap id="gcm" filename="../images/gcm.png" x="center" y="20" dithering="none" />
        <text-area x="center" y="100" width="80%" height="300" text="Open the Connect Mobile App on your phone to login to Spotify" justification="Gfx.TEXT_JUSTIFY_CENTER" />
    </layout>

    <layout id="Gcm">
        <bitmap id="gcm" filename="../images/gcm.png" x="center" y="20" dithering="none" />
        <text-area x="center" y="100" width="80%" height="300" text="Please connect your phone and open the Connect Mobile App" justification="Gfx.TEXT_JUSTIFY_CENTER" />
    </layout>
</layouts>
