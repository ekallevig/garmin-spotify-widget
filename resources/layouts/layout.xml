<layouts>
    <layout id="Summary">
        <button x="center" y="0" width="fill" height="116" behavior="onRefresh">
            <state id="stateDefault" color="Graphics.COLOR_TRANSPARENT" />
            <state id="stateHighlighted" color="Graphics.COLOR_TRANSPARENT" />
            <state id="stateSelected" color="Graphics.COLOR_TRANSPARENT" />
            <state id="stateDisabled" color="Graphics.COLOR_BLACK" />
        </button>
        <bitmap id="DefaultSpotifyLogo" x="center" y="10" filename="../images/spotify.png" />
        <label id="track" text="@Strings.TrackLabel" x="center" y="54" font="Gfx.FONT_SMALL" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_WHITE" />
        <label id="artist" x="center" y="84" font="Gfx.FONT_SMALL" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_BLUE" />
        <button x="20" y="130" width="111" height="111" behavior="onPlay">
            <state id="stateDefault" bitmap="@Drawables.DefaultPlayButton" />
            <state id="stateHighlighted" bitmap="@Drawables.HighlightedPlayButton" />
            <state id="stateSelected" bitmap="@Drawables.SelectedPlayButton" />
            <state id="stateDisabled" color="Graphics.COLOR_BLACK" />
        </button>
        <button x="151" y="130" width="111" height="111" behavior="onPause">
            <state id="stateDefault" bitmap="@Drawables.DefaultPauseButton" />
            <state id="stateHighlighted" bitmap="@Drawables.HighlightedPauseButton" />
            <state id="stateSelected" bitmap="@Drawables.DefaultPauseButton" />
            <state id="stateDisabled" color="Graphics.COLOR_BLACK" />
        </button>
        <button x="20" y="261" width="111" height="111" behavior="onPrevious">
            <state id="stateDefault" bitmap="@Drawables.DefaultPreviousButton" />
            <state id="stateHighlighted" bitmap="@Drawables.HighlightedPreviousButton" />
            <state id="stateSelected" bitmap="@Drawables.DefaultPreviousButton" />
            <state id="stateDisabled" color="Graphics.COLOR_BLACK" />
        </button>
        <button x="151" y="261" width="111" height="111" behavior="onNext">
            <state id="stateDefault" bitmap="@Drawables.DefaultNextButton" />
            <state id="stateHighlighted" bitmap="@Drawables.HighlightedNextButton" />
            <state id="stateSelected" bitmap="@Drawables.DefaultNextButton" />
            <state id="stateDisabled" color="Graphics.COLOR_BLACK" />
        </button>
        <label id="status" x="20" y="385" font="Gfx.FONT_XTINY" justification="Gfx.TEXT_JUSTIFY_LEFT" color="0x1DB954" />
        <label id="responseCode" x="260" y="385" font="Gfx.FONT_XTINY" justification="Gfx.TEXT_JUSTIFY_RIGHT" color="0x1DB954" />
    </layout>


    <layout id="ErrorLayout">
        <label id="Message" x="center" y="center" justification="Gfx.TEXT_JUSTIFY_CENTER" color="FFFFFF"/>
    </layout>

    <layout id="LoginLayout">
        <bitmap id="gcm" filename="../images/gcm.png" x="center" y="20" dithering="none" />
        <text-area x="center" y="100" width="80%" height="300" text="Open the Connect Mobile App on your phone to login to Spotify" justification="Gfx.TEXT_JUSTIFY_CENTER" />
    </layout>

    <layout id="Gcm">
        <bitmap id="gcm" filename="../images/gcm.png" x="center" y="20" dithering="none" />
        <text-area x="center" y="100" width="80%" height="300" text="Please connect your phone and open the Connect Mobile App" justification="Gfx.TEXT_JUSTIFY_CENTER" />
    </layout>
</layouts>
